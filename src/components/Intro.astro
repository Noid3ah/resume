<style>
  aside {
    background-color: var(--clr-secondary);
    color: var(--clr-text);
    position: relative;
    padding-inline: 2rem;
    padding-block: 2rem;
    
    @media (min-width: 768px) {
      padding-block: 3rem 0rem;
    }

    section + section {
      margin-block: 3rem 2rem;
    }

    li {
      color: var(--clr-light-text);
      font-size: var(--list);
      font-family: var(--ff-lato);
    }

    h3 {
      font-family: var(--ff-sofia);
      text-transform: uppercase;
      letter-spacing: .15rem;
      font-weight: 700;
      margin-bottom: var(--mbottom-header3);
      font-size: var(--header-3);
    }

    .contact {
      .contact__list {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: .7rem;
  
        li {
          display: flex;
          align-items: center;

          span:first-child {
            font-size: 1.4rem;
            margin-right: .8rem;
            color: var(--clr-accent);
          }
        }
      }
    }

    .education {
      .education__list {
        list-style: none;
        display:flex;
        flex-direction: column;
        gap: 2rem;

        .block {
          display: flex;
          flex-direction: column;
          gap: .5rem;
        }

        h4 {
          color: var(--clr-text);
          text-transform: uppercase;
        }

      }
    }

    .skills {
      .skills__list {
        list-style: disc;
        list-style-position: inside;
        display: flex;
        flex-direction: column;
        gap: .7rem;
      
      }
    }

  }
</style>