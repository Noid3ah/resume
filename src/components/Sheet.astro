---
import Hero from "./Hero.astro";
import Wrapper from "./Wrapper.astro";
---

<main>
  <Hero></Hero>
  <Wrapper></Wrapper>
</main>

<style>
  main{
    width: 8.27in;
    height: fit-content;
    background-color: var(--clr-primary);
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;

    @media (min-width: 768px) {
      height: 11.69in;
    }
  }
</style>