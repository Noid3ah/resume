---
import Intro from "./Intro.astro";
import Main from "./Main.astro";
---
<div class="wrapper">
  <Intro></Intro>
  <Main></Main>
</div>

<style>
  .wrapper {
    min-height: 80%;
    width: 100%;
    height: 100%;
    display: grid;
    grid-template-columns: 1fr 1.6fr;
    padding-inline: calc(var(--pad) + 1rem);
    padding-block-end: 2rem;
  }
</style>